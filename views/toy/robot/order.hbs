<div class="container" style="text-align:center">
  <h1>Order Successfully!</h1>
  <img src="{{robot.image}}" width="300" height="400" />
  <h3> Name: {{robot.name}}</h3>
  <h3>Price: {{robot.price}} vnd</h3>
  <h3> Quantity: {{quantity}}</h3>
  <h3>Total: {{total}} vnd</h3>
  <table border="1" style="text-align:center"  >
    <tr>
      <th colspan="7" >Robot List</th>
    </tr>
    <tr>
      <th>Image</th>
      <th>Category</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Menu</th>
      {{#each robot}}
      <tr>
        <th><img src="{{ image }}" width="200" height="300"></th>
        <th>{{category}}</th>
        <th>{{name}}</th>
        <th>{{price}} vnd</th>
        <th>{{quantity}}</th>
        <th>
            <a href="/toy/robot/edit/{{ _id }}" class="btn btn-warning">Edit</a> 
            <a href="/toy/robot//delete/{{ _id }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
        </th>
      </tr>
    {{/each}}
    </tr>
</div>